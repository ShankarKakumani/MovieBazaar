<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".navigation.MoviesF">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <TextView
                    android:id="@+id/englishMoviesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:text="English Movies"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/blue_grey_200"
                    app:drawableEndCompat="@drawable/ic_arrow_right" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More ( 529 )"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:padding="10dp"
                    android:textColor="@color/blue_700"
                    android:layout_alignParentEnd="true"

                    />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/moviesLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/black"
                android:layout_marginStart="8dp"
                android:visibility="gone">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/movieRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                </androidx.recyclerview.widget.RecyclerView>

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/movieShimmerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shimmer_duration="1000">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <include layout="@layout/layout_shimmer_movies" />
                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/teluguMoviesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    android:paddingBottom="10dp"
                    android:paddingEnd="10dp"
                    android:text="Telugu Movies"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/blue_grey_100"
                    app:drawableEndCompat="@drawable/ic_arrow_right" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More ( 281 )"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:padding="10dp"
                    android:textColor="@color/blue_700"
                    android:layout_alignParentEnd="true"

                    />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/teluguMoviesLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/black"
                android:layout_marginStart="5dp"
                android:visibility="visible">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/teluguRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                </androidx.recyclerview.widget.RecyclerView>

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/teluguShimmerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shimmer_duration="1000">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <include layout="@layout/layout_shimmer_movies" />
                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>




            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tamilMoviesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:text="Tamil Movies"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/blue_grey_200"
                    app:drawableEndCompat="@drawable/ic_arrow_right" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More ( 281 )"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:padding="10dp"
                    android:textColor="@color/blue_700"
                    android:layout_alignParentEnd="true"

                    />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/tamilMoviesLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/black"
                android:layout_marginStart="5dp"
                android:visibility="visible">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tamilRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                </androidx.recyclerview.widget.RecyclerView>

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/tamilShimmerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shimmer_duration="1000">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <include layout="@layout/layout_shimmer_movies" />
                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>




            </LinearLayout>

            <TextView
                android:id="@+id/hindiMoviesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hindi Movies"
                android:textColor="@color/blue_grey_200"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/ubuntu"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:padding="10dp"
                />

            <LinearLayout
                android:id="@+id/hindiMoviesLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/black"
                android:layout_marginStart="5dp"
                android:visibility="visible">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/hindiRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                </androidx.recyclerview.widget.RecyclerView>

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/hindiShimmerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shimmer_duration="1000">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <include layout="@layout/layout_shimmer_movies" />
                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>



            </LinearLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>



</LinearLayout>